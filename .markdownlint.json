{
  "code-block-style": {
    "style": "fenced"
  },
  "code-fence-style": {
    "style": "backtick"
  },
  "emphasis-style": {
    "style": "asterisk"
  },
  "fenced-code-language": {
    "allowed_languages": [
      "bash",
      "dockerfile",
      "gitignore",
      "json",
      "lua",
      "markdown",
      "powershell",
      "python",
      "text",
      "yaml"
    ],
    "language_only": true
  },
  "first-line-h1": {
    "allow_preamble": true
  },
  "heading-style": {
    "style": "atx"
  },
  "hr-style": {
    "style": "---"
  },
  "line-length": {
    "code_blocks": false,
    "line_length": 120,
    "tables": false
  },
  "link-image-style": {
    "collapsed": false,
    "shortcut": false,
    "url_inline": false
  },
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "ol-prefix": {
    "style": "ordered"
  },
  "proper-names": {
    "code_blocks": false,
    "names": [
      "Crowdin",
      "Factorio",
      "GitHub",
      "github.com",
      "github.io",
      "khaoslib",
      "Ko-fi",
      "Lua",
      "Wube"
    ]
  },
  "strong-style": {
    "style": "asterisk"
  },
  "ul-style": {
    "style": "dash"
  }
}
